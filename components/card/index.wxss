.shadow[class*='-red'] {
	box-shadow: var(--ShadowSize) var(--redShadow);
}

.shadow[class*='-orange'] {
	box-shadow: var(--ShadowSize) var(--orangeShadow);
}

.shadow[class*='-yellow'] {
	box-shadow: var(--ShadowSize) var(--yellowShadow);
}

.shadow[class*='-olive'] {
	box-shadow: var(--ShadowSize) var(--oliveShadow);
}

.shadow[class*='-green'] {
	box-shadow: var(--ShadowSize) var(--greenShadow);
}
.bg-gradual-green {
	background-image: var(--gradualGreen);
	color: var(--white);
}

.shadow-blur::before {
	content: '';
	display: block;
	background: inherit;
	filter: blur(10rpx);
	position: absolute;
	width: 100%;
	height: 100%;
	top: 10rpx;
	left: 10rpx;
	z-index: -1;
	opacity: 0.4;
	transform-origin: 0 0;
	border-radius: inherit;
	transform: scale(1, 1);
}

/* pages/details.wxss */
.details_container {
  width: 100%;
  position: relative;
}
.details_content {
  width: 100%;
  height: calc(100% - calc(120rpx + env(safe-area-inset-bottom) / 2));
}
.details_content_scroll {
  width: 100%;
  height: calc(100% - 100rpx);
}
.footer {
  width: 100%;
  height: calc(120rpx + env(safe-area-inset-bottom) / 2);
  padding-bottom: calc(env(safe-area-inset-bottom) / 2);
  background-color: #ffffff;
  position: absolute;
  bottom: 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.footer-text {
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding-left: 35rpx;
}
.footer-text-de {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.footer-btn {
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding-right: 35rpx;
}
.details_scroll {
  width: 100%;
  height: 100%;
}
.text-pl {
  padding-left: 18rpx;
}

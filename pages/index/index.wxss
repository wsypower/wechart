.index_page {
  width: 100%;
  height: 100%;
  position: relative;
}
.header {
  width: 100%;
  height: 104px;
  z-index: 10;
}
.main {
  width: 100%;
  height: calc(100% - 104px);
  z-index: 9;
  position: relative;
}
.nodata {
  position: absolute;
  width: 310rpx;
  height: 303rpx;
  left: 53%;
  top: 40%;
  transform: translate(-50%, -50%);
}
.scrollContainer {
  height: 100%;
  margin-bottom: 15rpx;
}
.scroll-bootom {
  height: 60rpx;
  width: 100%;
}

.right-card {
  height: 180rpx !important;
  width: 220rpx !important;
  border-radius: 12rpx !important;
}

.content {
  margin-top: 7rpx;
  color: #666;
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
}
.card-primary-item {
  margin-bottom: 30rpx;
}
.card-primary-item:nth-child(1) {
  margin-top: 40rpx;
}

.order-page-container {
  width: 100%;
}
.order-page-scroll {
  width: 100%;
  height: 100%;
}
.cu-list.menu-avatar > .cu-item .content.flex-sub {
  width: 100%;
}

.cu-list.menu-avatar > .cu-item .content {
  left: 0rpx;
  padding: 0 30rpx;
}
.order-btn {
  padding-top: 50rpx;
  width: 100%;
}
.cu-list.menu-avatar.comment > .cu-item {
  padding: 0rpx 0rpx 30rpx 0rpx;
  height: auto;
}
.cu-list.menu-avatar.comment > .cu-item:nth-child(1) {
  padding-top: 30rpx;
}
.item-rate {
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
}
.van-rate {
  margin-left: -7rpx;
}
.field_warp {
  width: 100%;
  min-height: 150rpx;
  margin-top: 20rpx;
}
.van-cell {
  padding: 0 !important;
}
.van-field__input--textarea {
  min-height: var(--field-text-area-min-height, 150rpx) !important;
}
.van-field__body--textarea.van-field__body--ios {
  margin-top: 0 !important;
  border: 2rpx solid var(--ghostWhite);
  margin-bottom: 10rpx;
  border-radius: 5rpx;
  padding: 15rpx;
}

.van-field__input {
  color: var(--darkGray) !important;
  font-size: 28rpx;
}
.van-field__input::placeholder {
  color: var(--gray) !important;
  font-size: 24rpx;
}
.van-field__placeholder {
  color: var(--gray) !important;
}
.no_images {
  width: 100%;
  height: 400rpx;
  background-color: #eceae5;
  display: flex;
  align-items: center;
  justify-content: center;
}
.no_images image {
  width: 80%;
  height: 100%;
}
